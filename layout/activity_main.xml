<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEF5FA"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/arrowTextView"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/twocircle2"
        android:paddingTop="20dp"
        android:textAlignment="textStart"
        android:textColor="#0B7C71"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mentorme"
        android:textStyle="bold|italic"
        android:textColor="#4A87B8"
        android:textSize="34sp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connect. ask. learn"
        android:layout_marginTop="5dp"
        android:textColor="#4A87B8"
        app:layout_constraintTop_toBottomOf="@+id/main"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_below="@+id/main"
        />

    <TextView
        android:id="@+id/mentor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentor Login"
        android:layout_marginTop="300dp"
        android:textColor="#4A87B8"
        app:layout_constraintTop_toBottomOf="@+id/main"
        android:layout_marginStart="100dp"
        android:textSize="15sp"
        android:layout_below="@+id/main"
        />
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Login"
        android:layout_marginTop="300dp"
        android:textColor="#4A87B8"
        android:layout_marginStart="250dp"
        app:layout_constraintTop_toBottomOf="@+id/main"
        android:textSize="15sp"
        android:layout_below="@+id/main"
        />
</RelativeLayout>