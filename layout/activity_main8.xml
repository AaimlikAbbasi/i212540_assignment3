<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="#CEF5FA">



    <RelativeLayout
        android:id="@+id/rectangle2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <ImageView
            android:id="@+id/backgroundImageView"

            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/twocircle2"/>

        <ImageView
            android:id="@+id/arrowImageView9"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:rotation="-135"
            android:src="@drawable/arrow_right_top_svgrepo_com"
            android:contentDescription="Arrow Icon"
            app:tint="#0B7C71" />

        <TextView
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:paddingTop="20dp"
            android:text="Let's Find ..."
            android:textColor="#0B7C71"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_edittext_background"
        android:focusable="false"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Search..."
        app:searchHintIcon="@null"
        app:searchIcon="?android:attr/actionModeWebSearchDrawable" />



    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="26dp"
        android:text="Recent Searches"
        android:textStyle="bold"
        android:textColor="#0B7C71"
        android:textSize="19sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/text"
        android:id="@+id/recycler_view"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rectangle"
        android:layout_height="match_parent"
        android:layout_marginTop="390dp">

        <!-- Adjust rectangle color here -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#9DEDE6" />

        <TextView
            android:id="@+id/main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            android:text="Browse Categories"
            android:textColor="#0B7C71"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/entrepreneurshipImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/main2"
            android:src="@drawable/enterpernship"
            />

        <TextView
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            android:layout_toRightOf="@+id/entrepreneurshipImage"
            android:background="@null"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Entrepreneurship"
            android:inputType="text"
            android:minHeight="48dp" />
        <ImageView
            android:id="@+id/arrowImageView3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-210dp"
            android:layout_marginStart="-50dp"
            android:layout_below="@id/main2"
            android:layout_toEndOf="@id/editTextText4"
            android:src="@drawable/arrow_right_top_svgrepo_com" />



        <ImageView
            android:id="@+id/personalgrowthImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/entrepreneurshipImage"
            android:src="@drawable/personalgrowth"
            />
        <TextView
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/entrepreneurshipImage"
            android:layout_toRightOf="@+id/personalgrowthImage"
            android:background="@null"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Personal Growth"
            android:minHeight="48dp" />
        <ImageView
            android:id="@+id/arrowImageView2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:layout_marginStart="-50dp"
            android:layout_below="@id/entrepreneurshipImage"
            android:layout_toEndOf="@id/editTextText4"
            android:src="@drawable/arrow_right_top_svgrepo_com" />


        <ImageView
            android:id="@+id/educationImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/personalgrowthImage"
            android:src="@drawable/education"
            />

        <TextView
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/personalgrowthImage"
            android:layout_toRightOf="@+id/educationImage"
            android:background="@null"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Education"
            android:minHeight="48dp"
            />
        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:layout_marginStart="-50dp"
            android:layout_below="@id/personalgrowthImage"
            android:layout_toEndOf="@id/editTextText4"
            android:src="@drawable/arrow_right_top_svgrepo_com" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-84dp"
        android:layout_below="@id/rectangle">

        <!-- Grey rectangle background -->
        <RelativeLayout
            android:id="@+id/rectangleBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sevenrectangle">

            <!-- Icon 1: Home -->
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/home_icon_silhouette_svgrepo_com" />

            <!-- Name for Icon 1: Home -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon1"
                android:textColor="@color/white"
                android:layout_marginStart="30dp"
                android:layout_centerHorizontal="false"
                android:text="Home" />

            <!-- Icon 3: Search -->
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/icon1"
                android:layout_marginStart="50dp"
                app:tint="#D7D0D8"
                app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

            <!-- Name for Icon 3: Search -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon3"
                android:textColor="@color/white"
                android:layout_marginStart="120dp"
                android:layout_centerHorizontal="false"
                android:text="Search" />

            <!-- Icon 4: Chat -->
            <ImageView
                android:id="@+id/icon4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/icon3"
                android:layout_marginStart="50dp"
                app:tint="#D7D0D8"
                app:srcCompat="@android:drawable/stat_notify_chat" />

            <!-- Name for Icon 4: Chat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon4"
                android:textColor="@color/white"
                android:layout_marginStart="225dp"
                android:layout_centerHorizontal="false"
                android:text="Chat" />

            <!-- Icon 2: Profile -->
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/icon4"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/user_profile_svgrepo_com" />

            <!-- Name for Icon 2: Profile -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon2"
                android:textColor="@color/white"
                android:layout_marginStart="320dp"
                android:layout_centerHorizontal="false"
                android:text="Profile" />


        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:layout_marginTop="635dp"
        android:layout_marginStart="170dp"
        android:background="@drawable/small_circle"
        android:src="@drawable/plus"
        app:tint="@android:color/white" />



</RelativeLayout>



