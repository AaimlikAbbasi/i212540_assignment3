<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chatitem_left"
    android:background="#CEF5FA"
    tools:context=".MainActivity11">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/person9"
        tools:ignore="MissingClass" />
    <ImageView
        android:id="@+id/chatImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true"
       android:visibility="gone"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:layout_toRightOf="@+id/profileImage1"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="@+id/profileImage1"
        android:background="@drawable/rectangle"
        android:id="@+id/show_message"
        android:textColor="@color/black"
        android:padding="8dp"
        />
    <ImageView
        android:id="@+id/voiceNoteIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_message"
        android:layout_marginTop="8dp"
        app:tint="@color/white"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:visibility="gone" />

</RelativeLayout>