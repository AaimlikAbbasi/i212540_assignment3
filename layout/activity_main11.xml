<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity11"
    android:background="#CEF5FA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rectangle"
        android:layout_height="wrap_content"
        android:background="@drawable/acticity_10_rectangle">


        <ImageView
            android:id="@+id/arrowImageView9"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:rotation="-135"
            android:src="@drawable/arrow_right_top_svgrepo_com"
            android:contentDescription="Arrow Icon"
            app:tint="#0B7C71" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/person"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/main2"
                android:background="@drawable/lightbluecircle"
                android:contentDescription="Profile Image" />

            <TextView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="Hi, I am "
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="John Cooper"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/straightLineImageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:src="@drawable/horizontal_line_svgrepo_com" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content1"
            android:layout_below="@+id/straightLineImageView3"
            android:layout_marginTop="-14dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="1dp">

            <TextView
                android:id="@+id/main3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Drop me a Review"
                android:textColor="@color/white"
                android:textSize="19sp"
                />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toRightOf="@+id/main3"
                android:layout_marginStart="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="82dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/smile" />

        </RelativeLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_below="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/activity11layout"
        android:elevation="4dp"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:gravity="top|start"
        android:hint="Type Your Experience.."
        android:textColorHint="#999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginTop="36dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/star1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star_empty_svgrepo_com" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/star2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star_empty_svgrepo_com" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/star3"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star_empty_svgrepo_com" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/star4"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star_empty_svgrepo_com" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/star5"
            android:layout_height="wrap_content"
            android:src="@drawable/star_empty_svgrepo_com" />

    </LinearLayout>
    <TextView
        android:id="@+id/loginButton3"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@+id/parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="78dp"
        android:backgroundTint="#0B7C71"
        android:background="@drawable/activity10_rec"
        android:text="Submit Feedback"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        />

</RelativeLayout>



